{
  "name": "markbook",
  "version": "1.7.0",
  "description": "Write books in commonmark.",
  "author": "Alex Shaw <alex.shaw.as@gmail.com>",
  "private": true,
  "license": "MIT",
  "bin": "bin/markbook",
  "repository": "github:Symbitic/markbook",
  "bugs": "https://github.com/Symbitic/markbook/issues",
  "keywords": [
    "markdown",
    "mdbook",
    "gitbook",
    "commonmark",
    "book"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "bundle": "pkg .",
    "build": "rollup -c",
    "doc": "node bin/markbook build doc",
    "lint": "eslint \"{src,data}/**/*.js\"",
    "lint:fix": "eslint --fix \"{src,data}/**/*.js\"",
    "prebundle": "npm run build",
    "predoc": "npm run build",
    "pretty": "prettier-standard \"{src,data}/**/*.js\"",
    "release": "standard-version",
    "test": "jest",
    "test:update": "jest --updateSnapshot",
    "watch": "rollup -c -w"
  },
  "pkg": {
    "assets": [
      "data/**/*"
    ],
    "targets": [
      "node8-linux-x64",
      "node8-macos-x64",
      "node8-win-x64"
    ],
    "outputPath": "dist"
  },
  "prettier": {
    "endOfLine": "lf",
    "semi": false,
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier-standard",
      "eslint --fix",
      "git add"
    ],
    "*.{json,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "browserslist": [
    "node 8"
  ],
  "dependencies": {
    "archiver": "^3.0.0",
    "chalk": "^2.4.1",
    "commander": "^2.20.0",
    "cosmiconfig": "^5.2.1",
    "handlebars": "^4.5.3",
    "inquirer": "^6.3.1",
    "joi": "^14.3.0",
    "mime": "^2.4.4",
    "open": "^7.0.0",
    "rehype-stringify": "^5.0.0",
    "remark-frontmatter": "^1.3.1",
    "remark-meta": "^0.2.0",
    "remark-parse": "^6.0.3",
    "remark-rehype": "^4.0.0",
    "remark-supersub": "^0.2.0",
    "rimraf": "^2.6.3",
    "to-vfile": "^6.0.0",
    "unified": "^7.1.0",
    "unist-util-find-after": "^2.0.4",
    "unist-util-find-before": "^2.0.4",
    "unist-util-visit": "^1.4.1",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.7.7",
    "@commitlint/cli": "^8.3.3",
    "@commitlint/config-conventional": "^8.3.4",
    "@rollup/plugin-json": "^4.0.1",
    "@rollup/plugin-node-resolve": "^7.0.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jest": "^23.3.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^4.0.1",
    "jest": "^24.8.0",
    "lint-staged": "^9.5.0",
    "pkg": "^4.4.0",
    "prettier": "^1.17.1",
    "prettier-standard": "^16.1.0",
    "rollup": "^1.13.1",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-executable": "^1.5.2",
    "standard-version": "^7.0.1"
  }
}
